{
  "name": "${localWorkspaceFolderBasename}-ai-dev",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-24.04",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/${localWorkspaceFolderBasename},type=bind,consistency=cached",
  "remoteUser": "vscode",
  "containerUser": "vscode",
  "updateRemoteUserUID": true,
  "privileged": false,
  "init": true,
  "overrideCommand": false,
  "userEnvProbe": "none",

  "runArgs": [
    "--cap-drop=ALL",
    "--security-opt=no-new-privileges:true",
    "--pids-limit=512"
  ],

  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "configureZshAsDefaultShell": true,
      "upgradePackages": true
    },
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.12"
    }
  },

  "containerEnv": {
    "HISTFILE": "/commandhistory/.zsh_history",
    "PIP_DISABLE_PIP_VERSION_CHECK": "1",
    "PYTHONDONTWRITEBYTECODE": "1",
    "OPENAI_API_KEY": "",
    "ANTHROPIC_API_KEY": "",
    "GEMINI_API_KEY": "",
    "AGENT_ALLOWED_ROOT": "/workspaces/${localWorkspaceFolderBasename}"
  },

  "mounts": [
    "source=${localWorkspaceFolderBasename}-history,target=/commandhistory,type=volume",
    "source=${localWorkspaceFolderBasename}-codex,target=/home/vscode/.codex,type=volume",
    "source=${localWorkspaceFolderBasename}-claude,target=/home/vscode/.claude,type=volume",
    "source=${localWorkspaceFolderBasename}-gemini,target=/home/vscode/.gemini,type=volume"
  ],

  "postCreateCommand": "bash .devcontainer/init-agents.sh",
  "postStartCommand": "bash -lc '[ -f .devcontainer/session-start.sh ] && bash .devcontainer/session-start.sh || true'",

  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.inheritEnv": false,
        "remote.autoForwardPorts": false,
        "files.trimTrailingWhitespace": true,
        "files.insertFinalNewline": true
      },
      "extensions": [
        "ms-vscode-remote.remote-containers",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "eamodio.gitlens",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-azuretools.vscode-docker"
      ]
    }
  },

  "otherPortsAttributes": {
    "onAutoForward": "ignore"
  }
}
